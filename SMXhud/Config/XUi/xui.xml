<!--	// SMX // HUD Logo -->

		<append xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']">
			<window name="SMXhudLogo" anchor="RightTop" />
		</append>


<!--	// SMX // In-game Menu -->

		<append xpath="/xui/ruleset[@name='default']/window_group[@name='ingameMenu']">
			<window name="SMXingameMenu" />
		</append>

		<remove xpath="/xui/ruleset[@name='default']/window_group[@name='ingameMenu']/window[@name='ingameMenu']" />


<!--	// SMX // Compass -->

		<append xpath="/xui/ruleset[@name='default']/window_group[@name='compass']">
			<window name="SMXwindowCompass" />
		</append>

		<remove xpath="/xui/ruleset[@name='default']/window_group[@name='compass']/window[@name='windowCompass']" />


<!--	// SMX // Unit Frame -->

		<append xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']">
			<window name="SMXunitFrame" anchor="LeftBottom" />
		</append>

		<remove xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']/window[@name='HUDLeftStatBars']" />


<!--	// SMX // Right HUD Frame -->

		<append xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']">
			<window name="SMXhudRight" anchor="RightBottom" />
		</append>

		<remove xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']/window[@name='HUDRightStatBars']" />


<!--	// SMX // Toolbelt -->

		<append xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']">
			<window name="SMXwindowToolbelt" anchor="CenterBottom" />
		</append>

		<remove xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']/window[@name='windowToolbelt']" />


<!--	// SMX // Level Display & XP Bar -->

		<append xpath="/xui/ruleset[@name='default']/window_group[@name='compass']">
			<window name="SMXlevelXP" anchor="LeftTop" />
		</append>


<!--	// SMX // Day & Time Display -->

		<append xpath="/xui/ruleset[@name='default']/window_group[@name='compass']">
			<window name="SMXdayTimeFrame" />
		</append>


<!--	// SMX // Quest Tracker -->

		<append xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']">
			<window name="SMXquestTracker" anchor="RightTop" />
		</append>

		<remove xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']/window[@name='windowQuestTracker']" />

</configs>