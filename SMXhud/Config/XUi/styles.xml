<!--	// SMX // WINDOW // Level Display & XP Bar Window -->

		<append xpath="/styles">
			<style name="SMX.levelXP.window" type="window">
				<style_entry name="pos" value="-30,-15" />
				<style_entry name="size" value="140,96" />
			</style>

			<style name="SMX.levelxp.background" type="texture">
				<style_entry name="depth" value="0" />
				<style_entry name="pos" value="30,10" />
				<style_entry name="size" value="105,102" />
				<style_entry name="texture" value="@modfolder:Textures/levelxp/smx_levelxp_bg.png" />
			</style>

			<style name="SMX.levelxp.foreground" type="texture">
				<style_entry name="depth" value="1" />
				<style_entry name="pos" value="50,-10" />
				<style_entry name="size" value="60,52" />
				<style_entry name="texture" value="@modfolder:Textures/levelxp/smx_levelxp_fg.png" />
			</style>

			<style name="SMX.levelxp.bar" type="sprite">
				<style_entry name="depth" value="2" />
				<style_entry name="pos" value="45,0" />
				<style_entry name="size" value="75,75" />
				<style_entry name="atlas" value="itemiconatlas" />
				<style_entry name="sprite" value="smx_levelxp_bar" />
				<style_entry name="color" value="255,255,255" />
			</style>

			<style name="SMX.levelxp.level" type="label">
				<style_entry name="depth" value="3" />
				<style_entry name="pos" value="45,-25" />
				<style_entry name="size" value="75,75" />
				<style_entry name="text" value="{playerlevel}[-]" />
				<style_entry name="font_face" value="AgencyB" />
				<style_entry name="font_size" value="40" />
				<style_entry name="color" value="[white]" />
				<style_entry name="justify" value="center" />
				<style_entry name="crispness" value="Never" />
				<style_entry name="effect" value="outline" />
				<style_entry name="upper_case" value="true" />
			</style>
		</append>


