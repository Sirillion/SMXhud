			<style_entry name="SMXlibElementsLBLSec"					value="128,128,128" />

			<style_entry name="SMXlibElementsCPSInd"					value="114,114,114" />

			<style_entry name="SMXlibElementsTBSlotLBL"					value="96,96,96,255" />
			<style_entry name="SMXlibElementsTHRWBar"					value="0,180,0,120" />

			<style_entry name="SMXlibElementsHealth"					value="175,30,25" />
