<!--	// SMX // Defined Icon Colors -->

		<append xpath="/styles">
			<style name="smxlib_icon_colors">
				<style_entry name="color" 								value="[white]" />				
				<style_entry name="hovercolor" 							value="[mediumGrey]" />				
				<style_entry name="selectedcolor" 						value="[lightGrey]" />				
			</style>
		</append>


<!--	// SMX // Menu Window Designs -->

		<append xpath="/styles">
			<style name="smxmenu_window_background"					type="sprite">
				<style_entry name="depth" 							value="2" />
				<style_entry name="pos" 							value="0,0" />
				<style_entry name="size" 							value="866,780" />
				<style_entry name="sprite" 							value="smxlib_ui_game_element_panel_background_dense" />
				<style_entry name="color" 							value="[SMXlibElementsBG]" />
				<style_entry name="globalopacity" 					value="false" />
				<style_entry name="globalopacitymod" 				value="1.5" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smxmenu_window_header" 					type="panel">
				<style_entry name="depth" 							value="3" />
				<style_entry name="pos" 							value="0,5" />
				<style_entry name="height" 							value="80" />
				<style_entry name="disableautobackground" 			value="true" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smxmenu_window_header_background" 			type="sprite">
				<style_entry name="depth" 							value="4" />
				<style_entry name="pos" 							value="0,0" />
				<style_entry name="size" 							value="859,99" />
				<style_entry name="sprite" 							value="smxlib_ui_game_element_panel_header" />
				<style_entry name="color" 							value="[SMXlibElementsHDR]" />
				<style_entry name="globalopacitymod" 				value="1.8" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smxmenu_window_title" 						type="label">
				<style_entry name="depth" 							value="6" />
				<style_entry name="pos" 							value="0,-20" />
				<style_entry name="size" 							value="0,0" />
				<style_entry name="font_size" 						value="36" />
				<style_entry name="crispness"						value="Never" />
				<style_entry name="effect" 							value="outline" />
				<style_entry name="effect_distance" 				value="1,1" />
				<style_entry name="justify" 						value="center" />
				<style_entry name="pivot" 							value="center" />
				<style_entry name="foregroundlayer" 				value="true" />
				<style_entry name="upper_case" 						value="true" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smxmenu_window_header_separation" 			type="sprite">
				<style_entry name="depth" 							value="5" />
				<style_entry name="pos" 							value="20,-65" />
				<style_entry name="size" 							value="5,693" />
				<style_entry name="sprite" 							value="smxlib_ui_element_vertical_separation_line" />
				<style_entry name="color" 							value="[SMXlibElementsLine]" />
				<style_entry name="rotation" 						value="90" />
				<style_entry name="globalopacitymod" 				value="1.2" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smxmenu_window_tabs" 						type="sprite">
				<style_entry name="depth" 							value="4" />
				<style_entry name="pos" 							value="15,-65" />
				<style_entry name="size" 							value="1230,52" />
				<style_entry name="sprite" 							value="smxlib_ui_game_element_tabs_background" />
				<style_entry name="color" 							value="[SMXlibElementsBG]" />
				<style_entry name="globalopacitymod" 				value="1.5" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smxmenu_window_tabs_separation" 			type="sprite">
				<style_entry name="depth" 							value="5" />
				<style_entry name="pos" 							value="20,-117" />
				<style_entry name="size" 							value="5,1210" />
				<style_entry name="sprite" 							value="smxlib_ui_element_vertical_separation_line" />
				<style_entry name="color" 							value="[SMXlibElementsLine]" />
				<style_entry name="rotation" 						value="90" />
				<style_entry name="globalopacitymod" 				value="1.2" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smxmenu_window_accent" 					type="sprite">
				<style_entry name="depth" 							value="4" />
				<style_entry name="pos" 							value="0,0" />
				<style_entry name="size" 							value="483,181" />
				<style_entry name="sprite" 							value="smxlib_ui_game_element_window_accent" />
				<style_entry name="globalopacitymod" 				value="1.8" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smxmenu_window_accent_glow" 				type="sprite">
				<style_entry name="depth" 							value="3" />
				<style_entry name="pos" 							value="0,0" />
				<style_entry name="size" 							value="395,137" />
				<style_entry name="sprite" 							value="smxlib_ui_game_element_window_accent_glow" />
				<style_entry name="globalopacitymod" 				value="1.8" />
			</style>
		</append>

</SMXlib>